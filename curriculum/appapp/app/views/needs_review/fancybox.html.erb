<div>
  <!-- settings changer -->
  <div class="container-fluid">
    <div id="pad-wrapper" class="user-profile">
      <!-- header -->
      <div class="row-fluid header">
        <div class="span8">
            <%= image_tag ("http://www.gravatar.com/avatar/#{@dossier.user.gravatar_id}"),:class => "avatar img-circle" %>
            <h3 class="name"><%=@dossier.user.full_name%></h3>
            <span class="area"><%=@dossier.tagline%></span>
        </div>

        <div class="row-fluid profile">
            <!-- bio, new note & orders column -->
            <div class="span9 bio">
                <div class="profile-box">
                    <!-- biography -->
                    <%= render 'shared/collapser_button' %>
                    <div class="span12 section collapsible">
                        <h6>Career & Ed.</h6>
                        <p><%= @dossier.career %></p>
                    </div>
                    <%= render 'shared/collapser_button' %>
                    <div class="span12 section collapsible">
                        <h6>Purpose</h6>
                        <p><%= @dossier.purpose %></p>
                    </div>
                    <%= render 'shared/collapser_button' %>
                    <div class="span12 section collapsible">
                        <h6>Code Skills</h6>
                        <p><%= @dossier.code_skills %></p>
                    </div>
                    <%= render 'shared/collapser_button' %>
                    <div class="span12 section collapsible">
                        <h6>Analytical Skills</h6>
                        <p><%= @dossier.analytic_skills %></p>
                    </div>
                    <%= render 'shared/collapser_button' %>
                    <div class="span12 section collapsible">
                        <h6>Additional Tidbits</h6>
                        <p><%= @dossier.tidbits %></p>
                    </div>
                    <div class="span12">
                      <div class="pull-right">

                            
                              <!-- new comment form -->
                               <div class="span12 section comment">
                              <% if can? :update, @dossier  %>
                                <!-- COMMENTS BOX  --> 
                                <!-- HIDE FROM APPLICANTS -->
                                <%= render "dossiers/comments" %>
                              <% end %>                                  
                              </div>
                          </div>
                      </div>
                    <!-- side address column -->


                </div>
            </div>
      </div>   
    </div>    
  </div>
</div>
      <div class="span3 address" style="float:right; position:absolute; top:220px; right: 42px;">         
                      <ul>
                          <li class="ico-li">
                              <i class="icon-map-marker"></i>
                              <%= @dossier.city %>
                             
                          </li>
                          <li class="ico-li">
                              <i class="icon-phone"></i>
                              <%= @dossier.phone_number %>
                          </li>
                           <li class="ico-li">
                              <i class="ico-mail"></i>
                              <a href="#"><%= @user.email %></a>
                          </li>
                          <li class="ico-li">
                            <%= link_to "skype:#{@dossier.skype}" do %>
                              <%= image_tag("skype_call.png") %>
                              <%= @dossier.skype %>
                            <% end %>
                          </li><br>
                          <li class="ico-li">
                              <i class="icon-twitter"></i>
                              <a href="#"><%= @dossier.twitter %></a>
                          </li>
                          <li class="ico-li">
                              <i class="icon-linkedin-sign"></i>
                              <a href="#"><%= @dossier.linkedin %></a>
                          </li>
                          <li class="ico-li">
                              <i class="icon-github"></i>
                              <a href="#"><%= @dossier.github %></a>
                          </li>
                          <li class="ico-li">
                              <i class="icon-edit"></i>
                              <a href="#"><%= @dossier.blog %></a>
                          </li><br>

                          <li class="ico-li">
                              <i class="icon-sign-blank"></i>
                              <a href="#"><%= @dossier.website %></a>
                          </li>

                          <li class="ico-li">
                              <i class="icon-sign-blank"></i>
                              <a href="#"><%= @dossier.other_links %></a>
                          </li>
                      </ul>
      </div> 