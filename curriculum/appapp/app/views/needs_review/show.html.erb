<div class="container-fluid">
  <div class="user-profile">
    
    <div class="row-fluid">
      <div class="span12">
        <div class="pull-right">
          <%= render "prev_dossier", :prev_dossier => @prev_dossier %>
          <%= render "reject_button", :dossier => @dossier %>
          <%= render "admin_actions", :dossier => @dossier %>
          <%= render "next_dossier", :next_dossier => @next_dossier %>
        </div>
      </div>
    </div>

    <div class="row-fluid header">
      <div class="span12">
        <%= image_tag ("http://www.gravatar.com/avatar/#{@dossier.user.gravatar_id}"),:class => "avatar img-circle"%>
        <h3 class="name reviewer-hashtags"><%=@dossier.user.full_name%></h3>
        <span>
        <% @dossier.hashtags.each do |hashtag| %>
          <%= link_to dossiers_path(:hashtag => hashtag.content) do %>
            <span class="label label-info icon-star-empty"><%= hashtag.content %></span>
          <% end %>
        <% end %>
      </span>
        <span class="area reviewer-tagline"><%=@dossier.tagline%></span>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span9">

        <div class="bio-item">
          <%= render 'shared/collapser_button' %>
          <strong>Career &amp; Ed.</strong>
          <div class="collapsible">
            <p><%= @dossier.career %></p>
          </div>
        </div>

        <hr>

        <div class="bio-item">
          <%= render 'shared/collapser_button' %>
          <strong>Purpose</strong>
          <div class="collapsible">
            <p><%= @dossier.purpose %></p>
          </div>
        </div>

        <hr>

        <div class="bio-item">
          <%= render 'shared/collapser_button' %>
          <strong>Code Skill</strong>
          <div class="collapsible">
            <p><%= @dossier.code_skills %></p>
          </div>
        </div>

        <hr>

        <div class="bio-item">
          <%= render 'shared/collapser_button' %>
          <strong>Analytic Skills</strong>
          <div class="collapsible">
            <p><%= @dossier.analytic_skills %></p>
          </div>
        </div>

        <hr>

        <div class="bio-item">
          <%= render 'shared/collapser_button' %>
          <strong>Additional Tidbits</strong>
          <div class="collapsible">
            <p><%= @dossier.tidbits %></p>
          </div>
        </div>

        <hr>

      </div>

      <div class="span3 address">
        <%= render "needs_review_sidebar", :dossier => @dossier, :user => @user %>
      </div>

    </div>

    <div class="row-fluid">
      <div class="span6">
        <% if can? :read, DossierComment %>
          <%= render "dossiers/comments" %>
        <% end %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <div class="pull-right">
          <%= render "prev_dossier", :prev_dossier => @prev_dossier %>
          <%= render "reject_button", :dossier => @dossier %>
          <%= render "admin_actions", :dossier => @dossier %>
          <%= render "next_dossier", :next_dossier => @next_dossier %>
        </div>
      </div>
    </div>

  </div> <!-- /.user-profile -->
</div>   <!-- /.container-fluid -->