<html>
<head>
  <title><%= title %></title> <!-- check /app/helpers/application_helper.rb for this method  -->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<meta name="viewport" content="width=device-width">

<body class='<%= params[:controller] %> <%= params[:action] %> <%= @body_classes %>'>

  <%= render "layouts/nav" %>
  <%= render "layouts/sidebar" %>

  <div class="content">  

    <% if (params[:controller] == "courses" && params[:action] == "dashboard") or (params[:controller] == "dossiers" && params[:action] == "index") %>
      <%= render "layouts/stats" %>
    <% end %>

    <div class="container-fluid" id="pad-wrapper">
      <%= render "shared/flash_messages" %>
      <%= yield %>
    </div> <!-- end div.container-fluid#pad-wrapper  -->

  </div> <!-- end div.content  -->

  <%= javascript_include_tag "application" %>
</body>
