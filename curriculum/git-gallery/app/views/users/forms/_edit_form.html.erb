<%= form_for(@user, :html => {:class => "form-horizontal"}) do |f| %>
  <%= render :partial => "shared/error_messages", :locals => {:target => @user} %>

  <fieldset>

    <legend>
      Please update your account
    </legend>
    <div class="control-group">
    <%= f.label(:email, :class => "control-label") %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
    </div>
    <div class="controls">
      <%= f.submit "Confirm Info", :class => "btn btn-primary" %>
      <div class="clearfix"></div>
      <%= link_to 'Delete User', @user, method: :delete, :class => "btn btn-primary", data: { confirm: "Are you sure you want to delete #{@user.name}?" } if current_user == @user %>
    </div> 

  </fieldset>
<% end %>