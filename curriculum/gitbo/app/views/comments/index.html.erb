<h1>Listing comments</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Git update at</th>
    <th>Git number</th>
    <th>Owner name</th>
    <th>Owner image</th>
    <th>Issue</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.body %></td>
    <td><%= comment.git_update_at %></td>
    <td><%= comment.git_number %></td>
    <td><%= comment.owner_name %></td>
    <td><%= comment.owner_image %></td>
    <td><%= comment.issue_id %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

