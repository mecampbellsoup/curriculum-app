<% if flash[:error] %>
  <div id="error_explanation"><%= flash[:error] %></div>
<% end %>

<%= form_for @repo do |f| %>
  <% if @repo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@repo.errors.count, "error") %> prohibited this repo from being saved:</h2>
      <ul>
        <% @repo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :owner_name %> <br />
    <%= f.text_field :owner_name %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <%= f.submit 'Create Repo', :class => 'btn btn-success' %>
<% end %>
