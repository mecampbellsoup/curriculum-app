<%= form_for(@assignment) do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% @assignment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

 <div>
    <%= f.file_field :assignment_file %>
  </div>
  
  <div class="field" >
      <label for="assignment_due_date">Due date</label><br />
      <input class="datepicker" name="assignment[due_date]" size="30" type="text" value="<%= @assignment.due_date %>"  />
  </div>

  <div class="field">
    <%= f.label :content  %><br />
    <%= f.text_area :content, :class=> "span6", :rows=>"15" %>
   
  </div>
  
  <% if @assignment.id %>
  <div class="field">
    <%= check_box_tag 'assignment[notify_change]' %>
    send email notifications to users
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
