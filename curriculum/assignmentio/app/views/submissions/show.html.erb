<h4 id = "notice"><%= notice %></h4>


<div class="span8">
  <div class="form-horizontal well">
      <div class="bigger">
        <div><h3><%= @assignment.name %></h3></div></br>
        <% if @assignment.author== current_user %>
        <div><b>student name:</b> <%= @user.name %></div></br>
        <%else%>
        <div><b>Feedback:</b> <%=@submission.feedback%></div></br>
        <%end%>
        <div><b>date submitted:</b> <%= @submission.created_at %></div></br>
        <div><b>content:</b> <%= @submission.content %></div></br>
        <div><b>download link:</b> <%= file_submitted(@submission) %></div>
      </div>
  </div>
</div>
