<%= partial :breadcrumbs, :locals => {filter: @tag, filter_id: @tag_id} %>

<div style="clear:both;">
  <% if !@matching_labs.empty? %>
  <!-- @matching_labs is an array of hashes -->
   
    <ul class="list-group col-md-4">
      <% @matching_labs.each_with_index do |lab, n| %>
        <li class="list-group-item">
          <a href="<%= lab.github_url.gsub("git@github.com:", "https://github.com/") %>"><%= lab.name %></a> 

          <!-- Button trigger modal -->
          <button class="badge" data-id="<%= lab.name %>" data-toggle="modal" data-target="#myModal<%= lab.name %>">DEPLOY</button>

          <!-- Deploy modal partial -->
          <%= partial :deploy, :locals => {lab: lab } %>

          <button class="badge show_readme" data-id="<%= n %>">README</button>
        </li>
      <% end %>
    </ul>
    

    <div>
      <% @matching_labs.each_with_index do |lab, n| %>
        <div id="p<%= n %>" class="col-md-4 readme panel-body" >
          <%= RDiscount.new(lab.readme).to_html %>
        </div>
      <% end %>
    </div>

  <% else %>
    Sorry, no labs to display.
  <% end %>
</div>
