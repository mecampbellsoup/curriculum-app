<% if !@tags.empty? %>
<!-- @tags is an array of arrays -->
  <div class="list-group">
    <a class="list-group-item active">
      Flag
    </a>
    <% @tags.each do |tag| %>
      <a href="/<%= tag %>" class="list-group-item"><%= tag %></a>
    <% end %>
  </div>
<% else %>
    Sorry, no tags to display.
<% end %>