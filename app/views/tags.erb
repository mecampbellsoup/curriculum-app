<html>
  <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <title></title>
      <link rel="stylesheet" href="">
  </head>
  <body>
    <% if !@tags.empty? %>
    <!-- @tags is an array of arrays -->
      <ul>
        <% @tags.each do |tag| %>
          <li><a href="/<%= tag %>"><%= tag %></a></li>
        <% end %>
      </ul>
    <% else %>
        Sorry, no tags to display.
    <% end %>
  </body>
</html>